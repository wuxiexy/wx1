/* pages/search/cartoon/list/list.wxss */

.lists-title text {
    font-size: 28rpx;
    display: block;
    margin-bottom: 10rpx
}

.lists-banner text {
    background-size:cover;
    width:100%;
    height:100px;
    display:block;
    background-repeat:no-repeat;
}

.gl-row {
    padding: 30rpx 20rpx;
    border-top: 1rpx solid #f2f2f2;
}

.gl-row:first-child {
    display: none;
}

/* .gl-row:last-child {
    border-bottom: 1rpx solid #f2f2f2;    
} */

.gl-row text
{
  font-size: 28rpx;
  margin-right: 20rpx;
}

.gl-row:active {
    background-color: rgba(0,0,0,.3)
}

.gl-row text:nth-child(2) {
    text-overflow:ellipsis;
    white-space:nowrap;
    overflow:hidden;
}


